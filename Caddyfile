:80

# Raíz de tu proyecto (donde está index.php)
root * /var/www/html

# Ejecutar PHP usando FrankenPHP
php_fastcgi index.php

# Servir archivos estáticos (CSS, JS, imágenes)
file_server

# Comprimir las respuestas para mayor rendimiento
encode zstd gzip

# Opcional: mostrar errores de PHP en desarrollo
@phpErrors {
    path *.php
}
handle @phpErrors {
    php_fastcgi index.php
}
